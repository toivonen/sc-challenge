block b-search {

    js: true

    elem input, default: {
        apply(
            this._mode = '',
            this.ctx = {
                block: 'b-form-input',
                mods: { theme: 'grey'},
                mix: [ { block : 'b-search', elem: 'input', mods: { action: 'none' } }],
                content: [
                    { elem: 'hint', content: 'Searching phrase here' },
                    { elem: 'input'}
                ]
            }
        )


    }
}
